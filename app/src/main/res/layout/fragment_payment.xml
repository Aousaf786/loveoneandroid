<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:hint="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.connaughttechnologies.lovedonce.ui.payment.PaymentViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.payment.PaymentFragment">

        <include layout="@layout/layout_bg_home" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/ToolbarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/layout_toolbar" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/home_content_top"
                android:layout_marginBottom="@dimen/home_content_top"
                android:textColor="@color/white"
                android:textSize="40sp"
                tools:text="$423.00" />

            <TextView
                style="@style/PaymentLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin_8"
                android:text="CARD NUMBER" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:background="@drawable/bg_stroke_rounded_8e8e8e"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etCardNumber"
                    style="@style/DefaultEditText.Payment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/default_margin_8"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="1234    5678    1234    12345"
                    android:inputType="number"
                    android:maxLength="16"
                    android:padding="@dimen/_8sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin_8"
                android:text="VISA"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/PaymentLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginBottom="@dimen/default_margin_8"
                        android:text="EXPIRE DATE" />

                    <EditText
                        android:id="@+id/tvExpDate"
                        style="@style/DefaultEditText.Payment"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin_8"
                        android:background="@drawable/bg_stroke_rounded_bce0fd"
                        android:gravity="center"
                        android:hint="05/21"
                        android:maxLength="5"
                        android:padding="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/PaymentLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_8"
                        android:text="CVV" />

                    <EditText
                        android:id="@+id/etCvv"
                        style="@style/DefaultEditText.Payment"
                        android:layout_width="@dimen/_57sdp"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_marginEnd="@dimen/default_margin_8"
                        android:background="@drawable/bg_stroke_rounded_bce0fd"
                        android:gravity="center"
                        android:hint="123"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="@dimen/_8sdp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPay"
            style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:text="PAY SECURE" />
    </RelativeLayout>
</layout>