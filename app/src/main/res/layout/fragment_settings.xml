<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.connaughttechnologies.lovedonce.ui.settings.SettingsViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_bg_home" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/ToolbarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/layout_toolbar" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/home_content_top"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@{viewModel.user.name}"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="Ahmad Faraz" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@{viewModel.user.address}"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="San Francisco, CA" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@{viewModel.user.phoneNumber}"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="+923000000000" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:background="@drawable/bg_filled_corner_primary_dark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUpdateProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableStart="@drawable/ic_update_profile"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="Update Profile"
                        android:textColor="@color/color_8F8F8F" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_separator_home" />

                    <TextView
                        android:id="@+id/tvOrderHistory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableStart="@drawable/ic_order_history"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="Order History"
                        android:textColor="@color/color_8F8F8F" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_separator_home" />

                    <TextView
                        android:id="@+id/tvSetReminders"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableStart="@drawable/ic_order_history"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="Set reminders birthdays, special occasions."
                        android:textColor="@color/color_8F8F8F" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_separator_home" />

                    <TextView
                        android:id="@+id/tvMyDiary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableStart="@drawable/ic_my_diary"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="My Diary"
                        android:textColor="@color/color_8F8F8F" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_separator_home" />

                    <TextView
                        android:id="@+id/tvAdditionalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableStart="@drawable/ic_my_diary"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="Additional Information"
                        android:textColor="@color/color_8F8F8F" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_separator_home" />

                    <TextView
                        android:id="@+id/tvGroupChat"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="Group Chat"
                        android:textColor="@color/color_8F8F8F"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_separator_home" />

                    <TextView
                        android:id="@+id/tvSubscription"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableStart="@drawable/ic_subscription"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="Subscription"
                        android:textColor="@color/color_8F8F8F" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_separator_home" />

                    <TextView
                        android:id="@+id/tvAddProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableStart="@drawable/ic_update_profile"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="Add Profile"
                        android:textColor="@color/color_8F8F8F" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_separator_home" />

                    <TextView
                        android:id="@+id/tvLogout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:background="@drawable/bg_filled_corner_primary_dark"
                        android:drawableStart="@drawable/ic_settings_logout"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin"
                        android:text="Logout"
                        android:textColor="@color/color_8F8F8F" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

    </RelativeLayout>
</layout>