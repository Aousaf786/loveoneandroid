<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/services_width"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/home_content_end"
    android:layout_marginBottom="@dimen/_20sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contentServices"
            android:layout_width="@dimen/services_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivService"
                android:layout_width="@dimen/services_width"
                android:layout_height="@dimen/services_height"
                android:layout_marginBottom="@dimen/default_margin_8"
                android:scaleType="centerCrop"
                android:src="@drawable/img_flowers" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/HomeMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_8"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textColor="@color/black"
                tools:text="Grass cutting" />

            <TextView
                android:id="@+id/tvPrice"
                style="@style/HomeMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_8"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                tools:text="$27.00" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBtnFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/default_margin_8"
            android:src="@drawable/ic_fav_empty" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
